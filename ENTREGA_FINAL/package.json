{
  "name": "entrega_final",
  "version": "1.0.0",
  "description": "Entrega final - Arquitectura con Repository, DTOs, recuperación de contraseña y eCommerce básico",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "node --watch src/server.js",
    "start": "node src/server.js",
    "start:db": "docker run --name mongo_db_entrega_final -p 27017:27017 -d mongo",
    "stop:db": "docker stop mongo_db_entrega_final && docker rm mongo_db_entrega_final"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^9.0.0",
    "nodemailer": "^7.0.11",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0"
  }
}
